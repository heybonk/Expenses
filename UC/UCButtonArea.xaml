<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Expenses"
             x:Class="Expenses.UCButtonArea">
             <VerticalStackLayout>

    <Label Text="{Binding TagCategoryName,StringFormat='＜{0}＞'}"
         FontSize="20"
         TextColor="{Binding Source={x:Static local:TableUtility.Instance},Path=DefaultColor}"/>
    <CollectionView
        ItemsSource="{Binding MainTagButtons}"
        SelectionMode="None">

        <CollectionView.ItemsLayout>
            <GridItemsLayout
                Orientation="Vertical"
                Span="2"
                HorizontalItemSpacing="2"
                VerticalItemSpacing="2"/>
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <local:UCMainTagButton/>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
    </VerticalStackLayout>

</ContentView>
