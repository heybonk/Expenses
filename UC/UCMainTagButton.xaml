<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expenses.UCMainTagButton">
    <Frame Padding="0"
            Margin="0"
            BackgroundColor="transparent"
            InputTransparent="False">
        <StackLayout>
            <Button Text="{Binding MainTagName}"
                    Command="{Binding OpenRegistWindow, Mode=OneWay}"
                    CommandParameter ="{Binding MainTag}"/>
        </StackLayout>
    </Frame>
</ContentView>
